<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartnerTab">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/partner_image"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_person_black_24dp" />
            <TextView
                android:id="@+id/partner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday:"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/partner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="September 1, 1998"
                android:textSize="20dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingEnd="40dp"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                android:rowCount="2">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="left"
                android:columnCount="1"
                android:rowCount="2">
                <TextView
                    android:id="@+id/partner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colors:"
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/partner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/partner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/partner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orange"
                    android:textSize="20dp" />


            </GridLayout>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"

                android:columnCount="1"
                android:rowCount="2">
                <TextView
                    android:id="@+id/partner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food: "
                    android:textSize="25dp" />
                <TextView
                    android:id="@+id/partner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chinese"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/partner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Burgers"
                    android:textSize="20dp" />
                <TextView
                android:id="@+id/partner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mexican"
                android:textSize="20dp" />

            </GridLayout>
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="left"
                    android:columnCount="1"
                    android:rowCount="2">
                    <TextView
                        android:id="@+id/partner4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hobbies: "
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Video Games"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reading"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bike Riding"
                        android:textSize="20dp" />

                </GridLayout>
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:columnCount="1"
                    android:rowCount="2">
                    <TextView
                        android:id="@+id/partner5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movies: "
                        android:textSize="25dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Comedies"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horror"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/partner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mystery "
                        android:textSize="20dp" />

                </GridLayout>













            </GridLayout>


        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>